{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Database",
			"type": "shell",
			"command": "docker-compose up -d mariadb",
			"problemMatcher": [],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		},
		{
			"label": "Install Frontend Dependencies",
			"type": "shell",
			"command": "npm install --legacy-peer-deps",
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			}
		},
		{
			"label": "Serve Angular Dev",
			"type": "shell",
			"command": "npm start",
			"group": "build",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/frontend"
			},
			"problemMatcher": {
				"owner": "typescript",
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".",
					"endsPattern": "."
				}
			}
		}
	]
}